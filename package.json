{
  "name": "md-to-mdx",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.17.1",
  "description": "Convert Markdown files with front-matter to MDX files with exported metadata.",
  "author": "KazooTTT <work@kazoottt.top>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazoottt",
  "homepage": "https://github.com/kazoottt/md-to-mdx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazoottt/md-to-mdx.git"
  },
  "bugs": "https://github.com/kazoottt/md-to-mdx/issues",
  "keywords": [
    "markdown",
    "mdx",
    "converter",
    "frontmatter",
    "metadata"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "md2mdx": "./dist/index.js",
    "md-to-mdx": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "chalk": "catalog:default",
    "gray-matter": "catalog:default"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:testing",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
